<div class="local_edusupport_holidaymode">
    {{#holidaymode}}
        <div class="fitem row">
            <div class="col-md-3">
                {{#userdate}} {{holidaymode}}, {{#str}} strftimedate {{/str}} {{/userdate}}
            </div>
            <div class="col-md-9">
                {{#str}} holidaymode_is_on, local_edusupport {{/str}}
            </div>
        </div>
        <div>
            <a href="#" class="btn btn-primary btn-block">
                <i class="fa fa-hourglass-end"></i>
                {{#str}} holidaymode_end, local_edusupport {{/str}}
            </a>
        </div>
    {{/holidaymode}}
    {{^holidaymode}}
        <a href="#" onclick="require(['jquery'], function($) { $('#holidaymode-{{uniqid}}').css('display', 'block'); }); return false;">
            <i class="fa fa-umbrella-beach"></i>
            {{#str}} holidaymode, local_edusupport {{/str}}
        </a>

        <div class="modal moodle-has-zindex" data-region="modal-container" role="dialog"
            id="holidaymode-{{uniqid}}" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header " data-region="header">
                        <h5 class="modal-title" data-region="title">
                            {{#str}} holidaymode, local_edusupport {{/str}}
                        </h5>
                        <a href="#" class="btn close" onclick="require(['jquery'], function($) { $('#holidaymode-{{uniqid}}').css('display', 'none'); }); return false;"
                             aria-label={{#quote}}{{#str}}closebuttontitle{{/str}}{{/quote}}>
                            <span aria-hidden="true">×</span>
                        </a>
                    </div>
                    <div class="modal-body" data-region="body">
                        {{{holidayform}}}
                    </div>
                    <div class="modal-footer" data-region="footer">
                        <button type="button" class="btn btn-primary" data-action="save">
                            Änderungen speichern
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="require(['jquery'], function($) { $('#holidaymode-{{uniqid}}').css('display', 'none'); }); return false;">
                            Abbrechen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/holidaymode}}
</div>
