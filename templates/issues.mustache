<div class="block_edusupport issues">
    <table class="generaltable" width="100%">
        <thead>
            <tr>
                <td width="200">#</td>
                <td>{{#str}} issue, block_edusupport {{/str}}</td>
                <td>{{#str}} name {{/str}}</td>
                <td>{{#str}} assigned, block_edusupport {{/str}}</td>
                <td>{{#str}} modified {{/str}}</td>
                <td>{{#str}} action {{/str}}</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th colspan="6">{{#str}} issues:current, block_edusupport {{/str}}</th>
            </tr>
            {{#current}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/blocks/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a></td>
                    <td>{{name}}</td>
                    <td>
                        <a href="{{wwwroot}}/user/profile/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/profile/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                </tr>
            {{/current}}
            <tr>
                <th colspan="6">{{#str}} issues:assigned, block_edusupport {{/str}}</th>
            </tr>
            {{#assigned}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/blocks/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a></td>
                    <td>{{name}}</td>
                    <td>
                        <a href="{{wwwroot}}/user/profile/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/profile/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/blocks/edusupport/issues.php?unassign={{discussionid}}">
                            {{#pix}} i/show, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/blocks/edusupport/issues.php?take={{discussionid}}">
                            {{#pix}} i/enrolusers, core {{/pix}}
                        </a>
                    </td>
                </tr>
            {{/assigned}}
            <tr>
                <th colspan="6">{{#str}} issues:other, block_edusupport {{/str}}</th>
            </tr>
            {{#other}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/blocks/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a></td>
                    <td>{{name}}</td>
                    <td>
                        <a href="{{wwwroot}}/user/profile/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/profile/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/blocks/edusupport/issues.php?assign={{discussionid}}">
                            {{#pix}} i/hide, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/blocks/edusupport/issues.php?take={{discussionid}}">
                            {{#pix}} i/enrolusers, core {{/pix}}
                        </a>
                    </td>
                </tr>
            {{/other}}
        </tbody>
    </table>
</div>
