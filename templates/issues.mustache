<div class="local_edusupport issues">
    <ul class="info">
    {{#count}}
    <div class="row">
            <div class="col-md-3">
                <h3>{{current}}</h3>
                <p>{{#str}} issue:countcurrent, local_edusupport {{/str}} </p>
            </div>
            <div class="col-md-3">
                <h3>{{assigned}}</h3>
                <p>{{#str}} issue:countassigned, local_edusupport {{/str}}</p>
            </div>
            <div class="col-md-3">
                <h3>{{other}}</h3>            
                <p>{{#str}} issue:countother, local_edusupport {{/str}}</p>
            </div>
            <div class="col-md-3">                
                <h3>{{closed}}</h3>            
                <p>{{#str}} issue:countclosed, local_edusupport {{/str}}</p>
            </div>       
        </div>
     {{/count}}
   </ul>
    <table class="generaltable" width="100%">
        <thead>
            <tr>
                <th width="200">#</th>
                <th>{{#str}} issue, local_edusupport {{/str}}</th>
                <th>{{#str}} name {{/str}}</th>
                <th>{{#str}} assigned, local_edusupport {{/str}}</th>
                <th>{{#str}} lastpost, forum {{/str}}</th>
                <th>{{#str}} modified {{/str}}</th>
                <th>{{#str}} action {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th colspan="7">{{#str}} issues:current, local_edusupport {{/str}}</th>
            </tr>
            {{#current}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{name}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/user/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{lastpostuserid}}">
                            {{lastpostuserfullname}}
                        </a>
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?asignto={{discussionid}}" onclick="require(['local_edusupport/main'], function(MAIN){ MAIN.assignSupporter({{discussionid}}); }); return false;">
                            {{#pix}} i/enrolusers, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?close={{discussionid}}">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {{/current}}
            {{^current}}
            <tr>
                <td colspan="7">{{#str}} issues:current:none, local_edusupport {{/str}}</td>
            </tr>
            {{/current}}
            <tr>
                <th colspan="7">{{#str}} issues:assigned, local_edusupport {{/str}}</th>
            </tr>
            {{#assigned}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{name}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/user/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{lastpostuserid}}">
                            {{lastpostuserfullname}}
                        </a>
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?unassign={{discussionid}}">
                            {{#pix}} i/show, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?take={{discussionid}}">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?close={{discussionid}}">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {{/assigned}}
            {{^assigned}}
            <tr>
                <td colspan="7">{{#str}} issues:assigned:none, local_edusupport {{/str}}</td>
            </tr>
            {{/assigned}}
            <tr>
                <th colspan="7">{{#str}} issues:other, local_edusupport {{/str}}</th>
            </tr>
            {{#other}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{name}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/user/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{lastpostuserid}}">
                            {{lastpostuserfullname}}
                        </a>
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?assign={{discussionid}}">
                            {{#pix}} i/hide, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?take={{discussionid}}">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?asignto={{discussionid}}" onclick="require(['local_edusupport/main'], function(MAIN){ MAIN.assignSupporter({{discussionid}}); }); return false;">
                            {{#pix}} i/enrolusers, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?close={{discussionid}}">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </a>
                    </td>
                    </td>
                </tr>
            {{/other}}<tr class="accordion-toggle collapsed" id="accordion1" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne" aria-expanded="false">
            <tr>
                <th colspan="7">{{#str}} issues:closed, local_edusupport {{/str}}</th>
            </tr>
            {{#closed}}
                <tr>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{id}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issue.php?d={{discussionid}}">
                            {{name}}
                        </a>
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{userid}}">
                            {{userfullname}}
                        </a>
                    </td>
                    <td>
                        {{#currentsupporterid}}<a href="{{wwwroot}}/user/view.php?id={{currentsupporterid}}">{{/currentsupporterid}}
                            {{currentsupportername}}
                        {{#currentsupporterid}}</a>{{/currentsupporterid}}
                    </td>
                    <td>
                        <a href="{{wwwroot}}/user/view.php?id={{lastpostuserid}}">
                            {{lastpostuserfullname}}
                        </a>
                    </td>
                    <td>{{#userdate}} {{lastmodified}}, %F %X {{/userdate}}</td>
                    <td>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?assign={{discussionid}}">
                            {{#pix}} i/hide, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?take={{discussionid}}">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?asignto={{discussionid}}" onclick="require(['local_edusupport/main'], function(MAIN){ MAIN.assignSupporter({{discussionid}}); }); return false;">
                            {{#pix}} i/enrolusers, core {{/pix}}
                        </a>
                        <a href="{{wwwroot}}/local/edusupport/issues.php?reopen={{discussionid}}">
                            <i class="fa fa-refresh" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {{/closed}}


        </tbody>
    </table>
</div>
