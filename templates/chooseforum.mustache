<div class="block_edusupport chooseforum">
    <table class="generaltable" width="100%">
        <thead>
            <tr>
                <td width="200">{{#str}} toggle, block_edusupport {{/str}}</td>
                <td>{{#str}} name {{/str}}</td>
            </tr>
        </thead>
        <tbody>
            {{#forums}}
                <tr>
                    <td>
                        {{^state}}
                            <a href="{{wwwroot}}/blocks/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&state=1"
                                class="btn btn-block btn-secondary">
                                {{#str}} supportforum:enable, block_edusupport {{/str}}
                            </a>
                        {{/state}}
                        {{#state}}
                        <a href="{{wwwroot}}/blocks/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&state=-1"
                            class="btn btn-block btn-primary">
                            {{#str}} supportforum:disable, block_edusupport {{/str}}
                        </a>
                        {{/state}}
                    </td>
                    <td>{{name}}</td>
                </tr>
            {{/forums}}
        </tbody>
    </table>
</div>
